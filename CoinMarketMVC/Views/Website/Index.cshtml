@model CoinMarketMVC.DataContracts.Microlink.Microlink

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="">
                <div class="row">
                    @using (Html.BeginForm("Index", "Website"))
                    {                        
                        <div class="col-md-9">
                            <input type="text" class="form-control input-lg" id="url" name="url" />
                            <p class="">@ViewBag.Message</p>
                        </div>
                        <div class="col-md-3">
                            <input type="submit" class="btn btn-lg" placeholder="www.website.com" id="search" name="Search" value="Search" />
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            @if (Model.data != null)
            {
                <div class="well-lg">
                    <div class="row">
                        <div class="col-md-5">
                            <img src="@Model.data.image.url" class="img-circle img-responsive" />
                        </div>
                        <div class="col-md-6">
                            <h4>@Model.data.title</h4>
                            <p>
                                @Model.data.description
                            </p>
                            <p>@Model.data.publisher</p>
                            <p>@Model.data.author</p>
                            <a href="@Model.data.url" target="_blank">@Model.data.url</a>
                        </div>
                    </div>
                </div>
            }

        </div>
        <div class="col-md-3"></div>
    </div>
</div>

