@model List<CoinMarketMVC.DataContracts.Microlink.Data>

@{
    ViewBag.Title = "AllWebsites";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<div>
    <div class="row">

        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <div class="col-md-6">
                    <div class="well-lg">
                        <div class="row">
                            <div class="col-md-5">
                                <img src="@item.image.url" class="img-responsive" />
                            </div>
                            <div class="col-md-6">
                                <h4>@item.title</h4>
                                <p>
                                    @item.description
                                </p>
                                <p>@item.publisher</p> 
                                <a href="@item.url" target="_blank">@item.url</a> -- <a href="@Url.Action("DeleteWebsite","Website",new { url = item.url })"><span class="glyphicon glyphicon-floppy-remove" onclick="return confirm('Estas seguro de eliminar este Microlink?')"></span></a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
