@model CoinMarketMVC.Models.RootObject 
@{
    ViewBag.Title = "Cryptocurrency";
}

<div class="row">
    <div class="col-md-4">
        <table class="table table-bordered table-responsive table-hover">
            <tr>
                <th>
                    Id
                </th>
                <th>
                    name
                </th>
                <th>
                    symbol
                </th>
                <th>rank</th>
                <th>price_usd</th>
                <th>price_btc</th>
                <th>percent_change_1h</th>
                <th>percent_change_24h</th>
                <th>percent_change_7d</th>
                <th>last_updated</th>

            </tr>
            <tbody>
                @foreach (var item in Model.data)
                {
                    <tr>
                        <td style="border:1px solid black">
                            <fieldset>
                                <b style="text-align:center; width:22%; font-family:'Agency FB'; font-size:small; background-color:#C8E6C9; color:red">
                                    @item.id
                                </b>
                            </fieldset>
                        </td>
                        <td>
                            @item.name
                        </td>
                        <td>
                            @item.symbol
                        </td>
                        <td>
                            @item.slug
                        </td>
                        <td>@item.quote.USD.volume_24h</td>
                        <td>@item.quote.USD.price</td>
                        <td>@item.quote.USD.percent_change_1h</td>
                        <td>@item.quote.USD.percent_change_24h</td>
                        <td>@item.quote.USD.percent_change_7d</td>
                        <td>@item.quote.USD.last_updated</td>                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
    </div>
</div>

